<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card card-stats">
          <div class="card-header card-header-info card-header-icon">
            <div class="card-icon">
              <i class="material-icons"><%= Settings.icons_search %></i>
            </div>
            <p class="card-category"><%= t ".total_courses" %></p>
            <h3 class="card-title"></h3>
          </div>
          <div class="card-footer">
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card card-stats">
          <div class="card-header card-header-warning card-header-icon">
            <div class="card-icon">
              <i class="material-icons"><%= Settings.icons_cached %></i>
            </div>
            <p class="card-category"><%= t ".inprogress" %></p>
            <h3 class="card-title"></h3>
          </div>
          <div class="card-footer">
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card card-stats">
          <div class="card-header card-header-success card-header-icon">
            <div class="card-icon">
              <i class="material-icons"><%= Settings.icons_done %></i>
            </div>
            <p class="card-category"><%= t ".completed" %></p>
            <h3 class="card-title"></h3>
          </div>
          <div class="card-footer">
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card card-stats">
          <div class="card-header card-header-danger card-header-icon">
            <div class="card-icon">
              <i class="material-icons"><%= Settings.icons_https %></i>
            </div>
            <p class="card-category"><%= t ".not_started" %></p>
            <h3 class="card-title"></h3>
          </div>
          <div class="card-footer">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <%= render @courses %>
    </div>
  </div>
</div>
