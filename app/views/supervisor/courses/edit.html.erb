<div class="content">
  <%= form_for @course, url: supervisor_course_path do |f| %>
    <%= f.hidden_field :status, value: Course.statuses[@course.status] %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title"><%= t ".create_course" %></h4>
              <p class="card-category"><%= t ".create_course_msg" %></p>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :start_date %>
                    <%= f.date_field :start_date, class: "form-control" %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :end_date %>
                    <%= f.date_field :end_date, class: "form-control" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.label :name, class: "bmd-label-floating" %>
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <div class="form-group">
                      <%= f.label :description, class: "bmd-label-floating" %>
                      <%= f.text_area :description, class: "form-control", rows: Settings.row %>
                    </div>
                  </div>
                </div>
              </div>
              <%= f.submit t(".submit"),
                class: "btn btn-primary pull-right" %>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
        <%= f.fields_for :subjects do |ff| %>
          <%= render "subject_field", f: ff %>
        <% end %>
        <%= link_to_add_fields t(".add_subject"), f, :subjects %>
      </div>
    </div>
  <% end %>
</div>
